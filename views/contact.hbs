<h2>Contact me</h2>

{{#if isSent}}
  <div class="isSent">
    The message has been sent!
    {{#if fileName}}
      File
      {{fileName}}
      has been saved!
    {{/if}}
  </div>
{{/if}}

{{#if isError}}
  <div class="isError">
    You can't leave fields empty or the file type is invalid!
  </div>
{{/if}}

<form
  action="/contact/send-message"
  method="POST"
  enctype="multipart/form-data"
>
  <label>
    Your name:
    <input type="text" name="author" />
  </label>
  <label>
    Your email:
    <input type="email" name="sender" />
  </label>
  <label>
    Title:
    <input type="text" name="title" />
  </label>
  <label>
    Message:
    <textarea name="message"></textarea>
  </label>
  <label>
    Project design:
    <input type="file" name="projectDesign" accept=".jpg, .jpeg, .png, .gif" />
  </label>
  <button type="submit">Send message</button>
</form>